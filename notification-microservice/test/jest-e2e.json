{
  "preset": "@shelf/jest-mongodb",
  "testEnvironment": "node",
  "testMatch": [
    "**/test/**/*.e2e-spec.ts"
  ],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "globalSetup": "./test/setup.ts",
  "globalTeardown": "./test/teardown.ts",
  "setupFilesAfterEnv": [
    "./test/setupAfterEnv.ts"
  ],
  "collectCoverage": true,
  "coverageDirectory": "./coverage",
  "coverageProvider": "v8"
}